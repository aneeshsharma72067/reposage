            },
            "medium": {
                "$value": 500,
                "$type": "number"
            },
            "semibold": {
                "$value": 600,
                "$type": "number"
            },
            "bold": {
                "$value": 700,
                "$type": "number",
                "$description": "Hero headline, Create an account link"
            }
        },
        "lineHeight": {
            "tight": {
                "$value": 1.2,
                "$type": "number",
                "$description": "Headlines"
            },
            "snug": {
                "$value": 1.4,
                "$type": "number",
                "$description": "Subheadings"
            },
            "normal": {
                "$value": 1.5,
                "$type": "number",
                "$description": "Body text"
            },
            "relaxed": {
                "$value": 1.6,
                "$type": "number"
            },
            "mono": {
                "$value": 1.7,
                "$type": "number",
                "$description": "Terminal lines for readability"
            }
        },
        "letterSpacing": {
            "tight": {
                "$value": "-0.02em",
                "$type": "dimension",
                "$description": "Headlines"
            },
            "normal": {
                "$value": "0em",
                "$type": "dimension"
            },
            "wide": {
                "$value": "0.02em",
                "$type": "dimension",
                "$description": "Uppercase labels, divider OR text"
            },
            "wider": {
                "$value": "0.05em",
                "$type": "dimension"
            }
        },
