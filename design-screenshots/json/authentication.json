{
    "$schema": "https://design-tokens.github.io/community-group/format/",
    "$metadata": {
        "name": "Agentic.ai Design System",
        "version": "1.0.0",
        "description": "Design tokens extracted from the Agentic.ai authentication interface. A dark, terminal-inspired engineering tool with monochromatic foundations and semantic accent colors.",
        "source": "Authentication screen — Sign In page"
    },
    "color": {
        "$description": "Core color palette",
        "base": {
            "black": {
                "$value": "#0a0a0a",
                "$type": "color",
                "$description": "True background — deepest surface"
            },
            "surface-100": {
                "$value": "#111111",
                "$type": "color",
                "$description": "Primary page background"
            },
            "surface-200": {
                "$value": "#1a1a1a",
                "$type": "color",
                "$description": "Card / panel background (terminal window, input fields)"
            },
            "surface-300": {
                "$value": "#222222",
                "$type": "color",
                "$description": "Elevated surface — hint bar background"
            },
            "surface-400": {
                "$value": "#2a2a2a",
                "$type": "color",
                "$description": "Border / divider color"
            },
            "white": {
                "$value": "#ffffff",
                "$type": "color",
                "$description": "Primary action buttons, headings"
            },
            "white-alpha-90": {
                "$value": "rgba(255,255,255,0.90)",
                "$type": "color",
                "$description": "Primary body text on dark surfaces"
            },
            "white-alpha-60": {
                "$value": "rgba(255,255,255,0.60)",
                "$type": "color",
                "$description": "Secondary / subheading text"
            },
            "white-alpha-40": {
                "$value": "rgba(255,255,255,0.40)",
                "$type": "color",
                "$description": "Muted text — placeholder, labels, divider OR"
            },
            "white-alpha-10": {
                "$value": "rgba(255,255,255,0.10)",
                "$type": "color",
                "$description": "Subtle border, hairlines"
            }
        },
        "semantic": {
            "terminal-green": {
                "$value": "#4ade80",
                "$type": "color",
                "$description": "Success / positive status in terminal output (CRITICAL_ISSUE_FOUND label, Status line)"
            },
            "terminal-orange": {
                "$value": "#fb923c",
                "$type": "color",
                "$description": "Warning / detection highlights in terminal (Breaking change, Architectural violation)"
            },
            "terminal-prompt": {
                "$value": "#4ade80",
                "$type": "color",
                "$description": "Shell prompt symbol ($)"
            },
            "terminal-command": {
                "$value": "#4ade80",
                "$type": "color",
                "$description": "CLI command text color"
            },
            "terminal-output": {
                "$value": "rgba(255,255,255,0.55)",
                "$type": "color",
                "$description": "Standard stdout lines (>> Loading system graph...)"
            },
            "link": {
                "$value": "#ffffff",
                "$type": "color",
                "$description": "Inline links — Create an account (bold weight used for emphasis)"
            },
            "link-muted": {
                "$value": "rgba(255,255,255,0.45)",
                "$type": "color",
                "$description": "De-emphasized link text — Forgot password?"
            }
        },
        "brand": {
            "logo-bg": {
                "$value": "#1c1c1c",
                "$type": "color",
                "$description": "Logo icon container fill"
            },
            "logo-border": {
                "$value": "rgba(255,255,255,0.15)",
                "$type": "color",
                "$description": "Logo icon container border"
            }
        }
    },
    "typography": {
        "$description": "Type scale and font definitions",
        "fontFamily": {
            "sans": {
                "$value": "'Inter', 'SF Pro Display', -apple-system, sans-serif",
                "$type": "fontFamily",
                "$description": "Primary UI typeface — headings, body, labels"
            },
            "mono": {
                "$value": "'JetBrains Mono', 'Fira Code', 'Menlo', monospace",
                "$type": "fontFamily",
                "$description": "Terminal / code blocks, keyboard hints"
            }
        },
        "fontSize": {
            "xs": {
                "$value": "11px",
                "$type": "dimension"
            },
            "sm": {
                "$value": "13px",
                "$type": "dimension"
            },
            "base": {
                "$value": "14px",
                "$type": "dimension",
                "$description": "Default body text, form labels"
            },
            "md": {
                "$value": "15px",
                "$type": "dimension",
                "$description": "Body copy in marketing panel"
            },
            "lg": {
                "$value": "18px",
                "$type": "dimension",
                "$description": "Form title — Sign in to Agentic"
            },
            "xl": {
                "$value": "28px",
                "$type": "dimension"
            },
            "2xl": {
                "$value": "36px",
                "$type": "dimension",
                "$description": "Hero headline"
            },
            "3xl": {
                "$value": "42px",
                "$type": "dimension"
            }
        },
        "fontWeight": {
