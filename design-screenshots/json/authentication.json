                },
                "fontWeight": {
                    "$value": "{typography.fontWeight.regular}"
                },
                "lineHeight": {
                    "$value": "{typography.lineHeight.normal}"
                },
                "color": {
                    "$value": "{color.base.white-alpha-60}"
                }
            },
            "form-title": {
                "fontFamily": {
                    "$value": "{typography.fontFamily.sans}"
                },
                "fontSize": {
                    "$value": "{typography.fontSize.lg}"
                },
                "fontWeight": {
                    "$value": "{typography.fontWeight.semibold}"
                },
                "color": {
                    "$value": "{color.base.white}"
                }
            },
            "form-subtitle": {
                "fontFamily": {
                    "$value": "{typography.fontFamily.sans}"
                },
                "fontSize": {
                    "$value": "{typography.fontSize.base}"
                },
                "fontWeight": {
                    "$value": "{typography.fontWeight.regular}"
                },
                "color": {
                    "$value": "{color.base.white-alpha-60}"
                }
            },
            "form-label": {
                "fontFamily": {
                    "$value": "{typography.fontFamily.sans}"
                },
                "fontSize": {
                    "$value": "{typography.fontSize.sm}"
                },
                "fontWeight": {
                    "$value": "{typography.fontWeight.medium}"
                },
                "color": {
                    "$value": "{color.base.white-alpha-90}"
                }
            },
            "form-input": {
                "fontFamily": {
                    "$value": "{typography.fontFamily.sans}"
                },
                "fontSize": {
                    "$value": "{typography.fontSize.base}"
                },
                "fontWeight": {
                    "$value": "{typography.fontWeight.regular}"
                },
                "color": {
                    "$value": "{color.base.white}"
                }
            },
            "form-placeholder": {
                "color": {
                    "$value": "{color.base.white-alpha-40}"
                }
            },
            "button-label": {
                "fontFamily": {
                    "$value": "{typography.fontFamily.sans}"
                },
                "fontSize": {
                    "$value": "{typography.fontSize.base}"
                },
                "fontWeight": {
                    "$value": "{typography.fontWeight.semibold}"
                },
                "letterSpacing": {
                    "$value": "{typography.letterSpacing.normal}"
                }
            },
            "terminal-code": {
                "fontFamily": {
                    "$value": "{typography.fontFamily.mono}"
                },
                "fontSize": {
                    "$value": "{typography.fontSize.sm}"
