                "fontSize": {
                    "$value": "{typography.fontSize.md}"
                },
                "fontWeight": {
                    "$value": "{typography.fontWeight.semibold}"
                },
                "color": {
                    "$value": "{color.base.white}"
                }
            }
        }
    },
    "spacing": {
        "$description": "Spacing scale — 4px base grid",
