    "borderRadius": {
        "none": {
            "$value": "0px",
            "$type": "dimension"
        },
        "sm": {
            "$value": "4px",
            "$type": "dimension"
        },
        "md": {
            "$value": "8px",
            "$type": "dimension",
            "$description": "Input fields, panels, terminal window"
        },
        "lg": {
            "$value": "12px",
            "$type": "dimension",
            "$description": "Cards, form container"
        },
        "xl": {
            "$value": "16px",
            "$type": "dimension"
        },
        "full": {
            "$value": "9999px",
            "$type": "dimension",
            "$description": "Pill buttons — Continue with GitHub, Sign In"
        }
